@article{carr1995physical,
  author =        {Carr, Mary-Elena and Lewis, Marlon R. and Kelley, Dan and
                   Jones, Burton},
  journal =       {Limnology and Oceanography},
  number =        {1},
  pages =         {138--147},
  title =         {A Physical Estimate of New Production in the
